@model IEnumerable<UrlShortenerSkilskyi.Models.Url>
@{
}

<h1>Short Url Table</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OriginalLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OriginalLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortLink)
                </td>
                <td>
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

